{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "sourceMap": false,
    "declaration": false,

    "isolatedModules": true,
    "noUncheckedSideEffectImports": false,

    "lib": ["ES2020", "DOM"]
  },

  "include": ["src/**/*.ts", "config.оыщт", "src/index.ts"],
  "exclude": ["node_modules"]
}
